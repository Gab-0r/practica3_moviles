<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PentagonoActivity">

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_title_marginUp_pentagono"
        android:background="@drawable/info_pentagono"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/m_title_text_pentagono"
        android:textColor="@color/m_title_text_pentagono"
        android:textSize="@dimen/m_title_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoArea_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_infoArea_marginUP_pentagono"
        android:background="@drawable/info_pentagono"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/m_infoArea_text_pentagono"
        android:textColor="@color/m_infoArea_text_pentagono"
        android:textSize="@dimen/m_infoArea_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perimetro_textView" />

    <TextView
        android:id="@+id/area_textView"
        android:layout_width="@dimen/m_area_width_pentagono"
        android:layout_height="@dimen/m_area_height_pentagono"
        android:layout_marginTop="@dimen/m_area_marginUP_pentagono"
        android:background="@drawable/input_pentagono"
        android:gravity="center"
        android:textColor="@color/m_area_text_pentagono"
        android:textSize="@dimen/m_area_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoArea_textView" />

    <Button
        android:id="@+id/operate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_operate_marginUP_pentagono"
        android:background="@drawable/operate_pentagono"
        android:text="@string/m_operate_text_pentagono"
        android:textColor="@color/m_operate_text_pentagono"
        android:textSize="@dimen/m_operate_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_textView" />

    <ImageView
        android:id="@+id/image_imageView_pentagono"
        android:layout_width="@dimen/m_image_width_pentagono"
        android:layout_height="@dimen/m_image_height_pentagono"
        android:layout_marginTop="@dimen/m_image_marginUP_pentagono"
        android:contentDescription="@string/m_image_text_pentagono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView"
        app:srcCompat="@mipmap/image_pentagono"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:id="@+id/width_editText"
        android:layout_width="@dimen/m_apothem_width_pentagono"
        android:layout_height="@dimen/m_apothem_length_pentagono"
        android:layout_marginTop="@dimen/m_apothem_marginUP_pentagono"
        android:background="@drawable/input_pentagono"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/m_apothem_hint_pentagono"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColor="@color/m_apothem_text_pentagono"
        android:textColorHint="@color/m_apothem_hint_pentagono"
        android:textSize="@dimen/m_apothem_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoWidth_textView" />

    <EditText
        android:id="@+id/height_editText"
        android:layout_width="@dimen/m_length_width_pentagono"
        android:layout_height="@dimen/m_length_height_pentagono"
        android:layout_marginTop="@dimen/m_length_marginUP_pentagono"
        android:background="@drawable/input_pentagono"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/m_length_hint_pentagono"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColor="@color/m_length_text_pentagono"
        android:textColorHint="@color/m_length_hint_pentagono"
        android:textSize="@dimen/m_length_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoHeight_textView" />

    <TextView
        android:id="@+id/infoWidth_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_infoApothem_marginUP_pentagono"
        android:background="@drawable/info_pentagono"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/m_infoApothem_text_pentagono"
        android:textColor="@color/m_infoApothem_text_pentagono"
        android:textSize="@dimen/m_infoApothem_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_imageView_pentagono" />

    <TextView
        android:id="@+id/infoHeight_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_infoLength_marginUP_pentagono"
        android:background="@drawable/info_pentagono"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/m_infoLength_text_pentagono"
        android:textColor="@color/m_infoLength_text_pentagono"
        android:textSize="@dimen/m_infoLength_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/width_editText" />

    <TextView
        android:id="@+id/infoPerimetro_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_infoPerimetro_marginUP_pentagono"
        android:background="@drawable/info_pentagono"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/m_infoPerimetro_text_pentagono"
        android:textColor="@color/m_infoPerimetro_text_pentagono"
        android:textSize="@dimen/m_infoPerimetro_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_editText" />

    <TextView
        android:id="@+id/perimetro_textView"
        android:layout_width="@dimen/m_perimetro_width_pentagono"
        android:layout_height="@dimen/m_perimetro_height_pentagono"
        android:layout_marginTop="@dimen/m_perimetro_marginUP_pentagono"
        android:background="@drawable/input_pentagono"
        android:gravity="center"
        android:textColor="@color/m_perimetro_text_pentagono"
        android:textSize="@dimen/m_perimetro_text_pentagono"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoPerimetro_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>